    <view class="biaozhu">型号</view><input class="inputstyle" placeholder="输入型号"  bindinput="getmodel" value="{{model}}"></input>
    </view>
    <view class="inputviwe">
    <view class="biaozhu">器械名称</view><input class="inputstyle" placeholder="输入器械名称"  bindinput="getname" value="{{name}}"></input>
  </view>
  <view  class="kongbai1"></view>
  <view class="buttenlist"> 
     <button class="butten" bindtap="adminadd">添加</button>
     <button class="butten" bindtap="adminget">查询</button>
     <button class="butten" bindtap="admindelte">删除</button>
     <button class="butten" bindtap="adminchange">修改</button>
  </view> 



</view>








