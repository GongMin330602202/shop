      <view bindtap="cativeNav" data-index="{{index}}"
      class="content {{index===currentIndexNav?'active':''}}" 
      wx:for="{{clinicsselection}}" wx:key="id">{{item.text}}
    
      </view>
    </scroll-view>
  </view>
